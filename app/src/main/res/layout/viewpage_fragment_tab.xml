<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/viewpager_fragment_tab_learn"
        android:textColor="@color/viewpager_fragment_tab_normal"
        android:background="@drawable/selector_viewpager_fragment_tab"
        android:drawableTop="@mipmap/tab_better_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="学习"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:clickable="true" />

    <TextView
        android:id="@+id/viewpager_fragment_tab_task"
        android:textColor="@color/viewpager_fragment_tab_normal"
        android:background="@drawable/selector_viewpager_fragment_tab"
        android:drawableTop="@mipmap/tab_channel_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="任务"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:clickable="true" />

    <TextView
        android:id="@+id/viewpager_fragment_tab_interact"
        android:textColor="@color/viewpager_fragment_tab_normal"
        android:background="@drawable/selector_viewpager_fragment_tab"
        android:drawableTop="@mipmap/tab_message_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="互动"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:clickable="true" />

    <TextView
        android:id="@+id/viewpager_fragment_tab_personal"
        android:textColor="@color/viewpager_fragment_tab_normal"
        android:background="@drawable/selector_viewpager_fragment_tab"
        android:drawableTop="@mipmap/tab_my_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="我"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:clickable="true" />

</LinearLayout>